#version 430

uniform float time;
uniform vec2 resolution;

in float ttl;
out vec4 out_Color;

float linearize(float z)
{
    float zNear = 0.01;
    float zFar = 100.0;
    float z_n = 2.0 * z - 1.0;
    float z_e = 2.0 * zNear * zFar / (zFar + zNear - z_n * (zFar - zNear));
    return z_e;
}

float modttl(float f)
{
  return f/750.0;
}

void main(void)
{

  float color = 0.0;

  color = 0.10*linearize(gl_FragCoord.z);
  //color = modttl(ttl);

  out_Color = vec4(1.0-color, ttl, 1.0, 0.5);
}
